<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Elogic_Divine::vendors" title="Vendors" sortOrder="100" >
                    <resource id="Elogic_Divine::vendor" title="Vendor" sortOrder="10">
                        <resource id="Elogic_Divine::vendor_save" title="Save Vendor" sortOrder="10" />
                        <resource id="Elogic_Divine::vendor_delete" title="Delete Vendor" sortOrder="20" />
                    </resource>
                </resource>
                <resource id="Elogic_Divine::employees" title="Employees" sortOrder="200" >
                    <resource id="Elogic_Divine::employee" title="Employee" sortOrder="20">
                        <resource id="Elogic_Divine::employee_save" title="Save Employee" sortOrder="10" />
                        <resource id="Elogic_Divine::employee_delete" title="Delete Employee" sortOrder="20" />
                        <resource id="Elogic_Divine::employee_validate" title="Validate Employee" sortOrder="30" />
                    </resource>
                </resource>
                <resource id="Elogic_Divine::eternal" title="Eternal" sortOrder="300" >
                    <resource id="Elogic_Divine::refinement" title="Refinement" sortOrder="30"/>
                </resource>
            </resource>
        </resources>
    </acl>
</config>